{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "lib",
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
